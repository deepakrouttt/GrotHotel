@model IEnumerable<dynamicHotelRate>
<link rel="stylesheet" href="~/css/star.css" asp-append-version="true" />
@{
    ViewData["Title"] = "Search";
    var adults = myVar.numberAdults;
}

<h4>Search Result</h4>

<div class="m-5">
    @foreach (var item in Model)
    {
        <div class="d-flex border m-3 rounded" style="width:80%">
            <div class="col p-3">
                <a asp-action="FilterRooms" asp-route-id="@item.Hotel.HotelId">
                    <img src="~/Images/HotelImages/@item.Hotel.HotelImage" style="width:200px;" />
                </a>
            </div>
            <div class="col m-4" style="flex-grow:3">
                <a asp-action="FilterRooms" asp-route-id="@item.Hotel.HotelId" class="homeFilter">
                    <h4>@item.Hotel.HotelName</h4>
                </a>
                <small>Address: @item.Hotel.Address</small>
                <h6>Rating : @item.Hotel.Rating @*<i data-star="@item.Rating"></i>*@</h6>
                <h5>
                    Price <b>
                        <small style="color:red;">
                            @foreach (var room in item.RoomRates)
                            {
                                @myVar.NumberFormeting(room.Rate);
                                break;
                            }
                        </small>
                    </b>
                </h5>@foreach(var discription in myVar.DiscriptionFormat(item.Hotel.Description))
                {
                    <h6>@discription</h6>
                }
            </div>
        </div>
    }
</div>
@model Book

@{
    ViewData["Title"] = "Hotel Search";
}
<header>
    <!-- Navbar -->
    <!-- Background image -->
    <div class="text-center bg-image BookingImage">
        <div class="mask">
            <div class="d-flex justify-content-center align-items-center h-100">
                <div class="text-white">
                    <h1 class="mb-3">Book</h1>
                    <h4 class="mb-3">Hotel</h4>
                    <h2>Hotel Search</h2>

                    @using (Html.BeginForm("Search", "Booking", FormMethod.Get))
                    {
                        <div class="form-group">
                            <label asp-for="DateFrom">Check-in Date:</label>
                            <input type="date" asp-for="DateFrom">
                        </div>
                        <div class="form-group">
                            <label asp-for="DateTo">Check-out Date:</label>
                            <input type="date" asp-for="DateTo">
                        </div>
                        <div class="form-group">
                            <label asp-for="Adult">Adults:</label>
                            <input type="number" asp-for="Adult" min="1">
                        </div>
                        <div class="form-group">
                            <label asp-for="Children">Children:</label>
                            <input type="number" asp-for="Children" min="0">
                        </div>
                        <button type="submit">Search</button>
                    } *@
                    <a data-mdb-ripple-init class="btn btn-outline-light btn-lg" href="#!" role="button">Search</a>
                </div>
            </div>
        </div>
    </div>
</header>